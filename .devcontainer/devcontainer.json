// README at: https://github.com/rocker-org/devcontainer-templates/tree/main/src/r-ver
{

	"remoteEnv": {
		"TZ": "America/Halifax"
	},

	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "ghcr.io/rocker-org/devcontainer/r-ver:4",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Use 'postCreateCommand' to run commands after the container is created.
	//	sudo bash /rocker_scripts/install_jupyter.sh && \
	//"postCreateCommand": "sudo bash /rocker_scripts/install_jupyter.sh && \
	//	echo 'source /opt/venv/bin/activate' >>/home/rstudio/.bashrc && \
	//	git config --global user.name 'Jeff Cullis' && \
	//	git config --global user.email 'jeffcullis@gmail.com'",

	"postCreateCommand": {
		"jupyter": "sudo bash /rocker_scripts/install_jupyter.sh",
		"venv": "echo 'source /opt/venv/bin/activate' >>/home/rstudio/.bashrc",
		"git_u": "git config --global user.name 'Jeff Cullis'",
		"git_e": "git config --global user.email 'jeffcullis@gmail.com'",
	},

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
